  <div class="main">
    <div class="form_outer">
      <form action="/index/notice" method="POST">
        <div class="row" style="height:100px">
          <div class="label">제목</div>
          <input type="text" class="title" placeholder="제목을 입력하세요">
        </div>
        <div class="row" style="height:100px">
          <div style="display: flex;width:80%;margin:auto">
            <div class="label" style="width:45%;">작성자 이름</div>
            <div style="width:10%"></div>
            <div class="label" style="width:45%">작성 일자</div>
          </div>
          <div style="display: flex; width:80%;margin:auto">
            <div class="name" style="width:45%;">
              <%=lc.name %>
            </div>
            <div style="width:10%"></div>
            <div class="date" style="width:45%;">
              <%= new Date().getFullYear() + '년 ' +(new Date().getMonth() + 1) + '월 ' +new Date().getDate()+'일' %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="label" style="width:80%;text-align: left;margin:auto">내용</div>
          <input type="text"placeholder="내용을 입력하세요" class="notice_content">
        </div>
        <div class="row" style="height:100px">
          <button type="submit" class="post_btn">글 올리기</button>
        </div>
      </form>
    </div>
  </div>
